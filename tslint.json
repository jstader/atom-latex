{
  "extends": "tslint:recommended",
  "defaultSeverity": "error",
  "rules": {
    "interface-name": [true, "never-prefix"],
    "ordered-imports": [true, { "grouped-imports": true }],
    "prefer-const": [true, { "destructuring": "all" }],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  }
}
